# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
#*		/										module:secure

# Home page
GET     /                                       Stampings.show

#Home page amministrazione
GET		/presenze								Application.indexAdmin

#Orario e timbrature
GET     /orario/{personId}/{year}/{month}		Stampings.show

GET		/orarioAdmin/{personId}/{year}/{month}	Stampings.personStamping
GET 	/orarioAdmin							Stampings.personStamping

#Assenze
GET		/assenze								Absences.show

#Assenze annuali
GET		/assenze-annuali						YearlyAbsences.show

#Ferie
GET		/ferie									Vacations.show
GET		/vacations.html							Vacations.vacations		
GET		/vacationsCurrentYear.html				Vacations.vacationsCurrentYear		

#Competenze
GET		/competenze								Competences.show

#Dispatcher
POST	/dispatch								SwitchTemplate.dispatch		

GET		/administration/month-recap/{date}		MonthRecap.show

GET		/person/{<[0-9]+>id}/dailyStampings/{<(19|20)\d\d>year}/{<(0[1-9]|1[012])>month}/{<(0[1-9]|[12][0-9]|3[01])>day}				Stampings.dailyStampings

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import Secure routes
#*       /                						module:secure

GET		/persons								Persons.list
POST	/persons								Persons.save
GET		/persons/new							Persons.form


GET		/manageWorkingTime						WorkingTimes.manageWorkingTime
POST	/insertWorkingTime						WorkingTimes.insertWorkingTime

GET		/vacationsAdmin							VacationsAdmin.manageVacationCode
POST	/insertVacation							VacationsAdmin.insertVacationCode

GET		/changePassword							Persons.changePassword
POST	/changePassword							Persons.savePassword

GET		/stampings/create						Stampings.create
POST	/stampings/insert/{personId}/{year}/{month}/{day}	Stampings.insert
GET		/stampings/edit/{stampingId}			Stampings.edit
POST	/stampings/update						Stampings.update
GET		/choosePersonAndDate					Stampings.choosePersonAndDate
GET		/personStamping							Stampings.personStamping

GET		/absences/insert/{personId}/{year}/{month}/{day}	Absences.insert
POST	/absences/create						Absences.create

GET		/absences/edit/{absenceId}				Absences.edit
POST	/absences/update						Absences.update

GET		/absences/absenceCodeList				Absences.absenceCodeList

GET		/confParameters							ConfParameters.show
POST	/confParameters							ConfParameters.save

GET 	/reperibility/{type}/personList			Reperibility.personList

GET		/reperibility/{type}/find/{<(19|20)\d\d>yearFrom}/{<(0[1-9]|1[012])>monthFrom}/{<(0[1-9]|[12][0-9]|3[01])>dayFrom}/{<(19|20)\d\d>yearTo}/{<(0[1-9]|1[012])>monthTo}/{<(0[1-9]|[12][0-9]|3[01])>dayTo}	Reperibility.find

PUT		/reperibility/{type}/update/{body}		Reperibility.update

GET		/reperibility/{type}/absence/{<(19|20)\d\d>yearFrom}/{<(0[1-9]|1[012])>monthFrom}/{<(0[1-9]|[12][0-9]|3[01])>dayFrom}/{<(19|20)\d\d>yearTo}/{<(0[1-9]|1[012])>monthTo}/{<(0[1-9]|[12][0-9]|3[01])>dayTo}	Reperibility.absence

# Catch all
*       /{controller}/{action}                  {controller}.{action}