# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
#*		/										module:secure


# Home page
GET     /                                       Application.index

#Orario e timbrature
GET     /orario		                            Stampings.show
POST	/orario									Stampings.show

#Assenze
GET		/assenze								Absences.show

#Assenze annuali
GET		/assenze-annuali						YearlyAbsences.show

#Ferie
GET		/ferie									Vacations.show
GET		/vacations.html							Vacations.vacations		
GET		/vacationsCurrentYear.html				Vacations.vacationsCurrentYear		

#Competenze
GET		/competenze								Competences.show

#Dispatcher
POST	/dispatch								SwitchTemplate.dispatch		

POST    /login                                  Application.login
GET     /logout                                 Application.logout

GET		/administration/month-recap/{date}		MonthRecap.show

GET		/person/{<[0-9]+>id}/dailyStampings/{<(19|20)\d\d>year}/{<(0[1-9]|1[012])>month}/{<(0[1-9]|[12][0-9]|3[01])>day}				Stampings.dailyStampings

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*       /                						module:secure
GET		/updatePerson							Persons.update		
POST	/insertPerson							Persons.insert		

